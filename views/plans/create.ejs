<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>
<body>

    <div class="container">
        <h2 class="mt-5">Criação de Planos</h2>
        <hr>
        <form action="/admin/plans/store" method="POST">
            <div class="card">
                <div class="card-header">
                    <h4>Novo Plano</h4>
                </div>

                <div class="card-body">
                    <input type="text" name="title" id="title" class="form-control" placeholder="Título do Plano"> <br>

                    <% if (title_msg.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= title_msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>

                    <input type="number" name="list" id="list" class="form-control" placeholder="N° de Listas"> <br>

                    <% if (list_msg.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= list_msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>

                    <input type="number" name="client" id="client" class="form-control" placeholder="N° de Clientes"> <br>

                    <% if (client_msg.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= client_msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>

                    <input type="number" name="value" id="value" placeholder="Custo" class="form-control"> <br>

                    <% if (value_msg.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= value_msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>

                    <hr>
                    Permite Importação de Lista: <input type="checkbox" name="imports" id="imports">
                </div>

                <div class="card-footer">
                    <button class="btn btn-success btn-block">Cadastrar</button>
                </div>
            </div>
        </form>
    </div>

</body>

<%- include ("../partials/footer.ejs") %>
